<UserControl
  x:Class="小科狗配置.HotKeyControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:小科狗配置"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="20"
  d:DesignWidth="120"
  mc:Ignorable="d">
  <Grid>
    <TextBox
      x:Name="txtHotKey"
      VerticalContentAlignment="Center"
      PreviewKeyDown="TxtHotKey_PreviewKeyDown"
      PreviewKeyUp="TxtHotKey_PreviewKeyUp"
      PreviewTextInput="TxtHotKey_PreviewTextInput"

      ToolTip="请输入热键" TextChanged="TxtHotKey_TextChanged" />
  </Grid>
</UserControl>
