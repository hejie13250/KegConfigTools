<class:BasePage
    FontFamily="小科狗字体"
    FontSize="14"
    TextOptions.TextRenderingMode="ClearType"
    Title="ModifyTable"
    UseLayoutRounding="True"
    mc:Ignorable="d"
    x:Class="小科狗配置.Page.ModifyTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:class="clr-namespace:小科狗配置.Class"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="grid1">



        <ScrollViewer
            HorizontalAlignment="Left"
            VerticalScrollBarVisibility="Hidden"
            x:Name="scrollViewer1">
            <StackPanel Orientation="Vertical" x:Name="groupBoxStackPanel">

                <GroupBox
                    Header="SQLite码表修改"
                    Margin="10,0,10,10"
                    MouseEnter="GroupBox_MouseEnter"
                    Style="{StaticResource HiddenBorderGroupBoxStyle}">
                    <Border Style="{StaticResource CustomBorderStyle}">
                        <Grid Margin="10,10,10,10">

                            <StackPanel Orientation="Vertical">
                                <StackPanel
                                    Margin="0,0,0,5"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Top"
                                    x:Name="stackPanel_1">
                                    <CheckBox
                                        Click="事件_切换库按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        IsChecked="False"
                                        Padding="5,0,0,0"
                                        Style="{DynamicResource DbCheckBox}"
                                        VerticalAlignment="Center"
                                        x:Name="dbCheckBox" />
                                    <ComboBox
                                        Height="24"
                                        Margin="5,0,0,0"
                                        MouseEnter="组合框_MouseEnter"
                                        SelectionChanged="事件_表组合框_SelectionChanged"
                                        Style="{DynamicResource RoundComboBox}"
                                        Width="145"
                                        x:Name="comboBox" />
                                    <Button
                                        Click="事件_打开按钮_Click"
                                        Height="24"
                                        IsEnabled="False"
                                        Margin="5,0,0,0"
                                        Padding="1,-5,1,1"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="打开其它库"
                                        Width="24"
                                        x:Name="open_Button">
                                        <Image
                                            Height="14"
                                            Margin="2,2,2,2"
                                            Source="{StaticResource 三点}" />
                                    </Button>
                                    <Button
                                        Click="事件_复制表按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="复制表"
                                        Width="24"
                                        x:Name="newName_Button">
                                        <Image
                                            Height="18"
                                            HorizontalAlignment="Center"
                                            OpacityMask="Black"
                                            Source="{StaticResource 复制}"
                                            VerticalAlignment="Center"
                                            Width="18" />
                                    </Button>
                                    <Button
                                        Click="事件_删除表按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="删除表"
                                        x:Name="reName_Button">
                                        <Image
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            OpacityMask="Black"
                                            Source="{StaticResource 删除表}"
                                            VerticalAlignment="Center"
                                            Width="14" />
                                    </Button>
                                    <Button
                                        Click="事件_导入表按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="导入 CSV 文件 为新表"
                                        VerticalAlignment="Center"
                                        Width="24">
                                        <Image
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 导入}"
                                            VerticalAlignment="Center"
                                            Width="14" />
                                    </Button>
                                    <Button
                                        Click="事件_导出表按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="导出当前表为 CSV 文件"
                                        VerticalAlignment="Center"
                                        Width="24">
                                        <Image
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 导出}"
                                            VerticalAlignment="Center"
                                            Width="14" />
                                    </Button>






                                    <Label Content="字体：" Margin="10,0,0,0" />
                                    <ComboBox
                                        Height="24"
                                        IsEnabled="False"
                                        Margin="5,0,0,0"
                                        MouseEnter="组合框_MouseEnter"
                                        SelectionChanged="事件_字体组合框_SelectionChanged"
                                        Style="{DynamicResource RoundComboBox}"
                                        Width="145"
                                        x:Name="fontComboBox" />

                                </StackPanel>
                                <StackPanel
                                    IsEnabled="False"
                                    Orientation="Vertical"
                                    x:Name="stackPanel_2">
                                    <StackPanel
                                        Height="24"
                                        IsEnabled="False"
                                        Orientation="Horizontal"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        x:Name="stackPanel_3">

                                        <StackPanel Orientation="Horizontal" x:Name="stackPanel_4">
                                            <CheckBox
                                                Click="事件_切换按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Center"
                                                Padding="5,0,0,0"
                                                Style="{DynamicResource KeyOrValueCheckBox}"
                                                VerticalAlignment="Center"
                                                x:Name="keyOrValueCheckBox" />
                                            <TextBox
                                                Height="24"
                                                Margin="5,0,0,0"
                                                Padding="0,0,0,0"
                                                Style="{DynamicResource RoundTextBox}"
                                                Tag="搜索编码"
                                                TextChanged="事件_搜索框_TextChanged"
                                                TextWrapping="Wrap"
                                                Width="116"
                                                x:Name="searchTextBox" />
                                            <TextBox
                                                Height="24"
                                                IsReadOnly="True"
                                                Margin="5,0,0,0"
                                                Padding="0,0,0,0"
                                                Style="{DynamicResource RoundTextBox}"
                                                Text="词条数："
                                                TextWrapping="Wrap"
                                                Width="140"
                                                x:Name="countTextBox" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" x:Name="stackPanel_5">
                                            <Button
                                                Click="事件_第一页按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                Margin="5,0,0,0"
                                                Style="{DynamicResource RoundButton2}"
                                                ToolTip="第一页"
                                                VerticalAlignment="Top"
                                                Width="24">
                                                <Image
                                                    Height="16"
                                                    HorizontalAlignment="Center"
                                                    Source="{StaticResource 第一页}"
                                                    VerticalAlignment="Center"
                                                    Width="16" />
                                            </Button>
                                            <Button
                                                Click="事件_上一页按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                Margin="5,0,0,0"
                                                Style="{DynamicResource RoundButton2}"
                                                ToolTip="上一页"
                                                VerticalAlignment="Top"
                                                Width="24">
                                                <Image
                                                    Height="16"
                                                    HorizontalAlignment="Center"
                                                    Source="{StaticResource 上一页}"
                                                    VerticalAlignment="Center"
                                                    Width="16" />
                                            </Button>

                                            <TextBox
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                IsReadOnly="True"
                                                Margin="5,0,0,0"
                                                MouseWheel="事件_页码框_MouseWheel"
                                                Padding="5,0,5,0"
                                                Style="{DynamicResource RoundTextBox}"
                                                Text="5"
                                                TextWrapping="Wrap"
                                                ToolTip="鼠标滚轮调节，按 Ctrl 步长为 5，按 Shift 步长为 10"
                                                VerticalAlignment="Center"
                                                Width="70"
                                                x:Name="pageTextBox" />
                                            <Button
                                                Click="事件_下一页按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                Margin="5,0,0,0"
                                                Style="{DynamicResource RoundButton2}"
                                                ToolTip="下一页"
                                                VerticalAlignment="Top"
                                                Width="24">
                                                <Image
                                                    Height="16"
                                                    HorizontalAlignment="Center"
                                                    Source="{StaticResource 下一页}"
                                                    VerticalAlignment="Center"
                                                    Width="16" />
                                            </Button>
                                            <Button
                                                Click="事件_最后页按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                Margin="5,0,0,0"
                                                Style="{DynamicResource RoundButton2}"
                                                ToolTip="最后一页"
                                                VerticalAlignment="Top"
                                                Width="24">
                                                <Image
                                                    Height="16"
                                                    HorizontalAlignment="Center"
                                                    Source="{StaticResource 最后一页}"
                                                    VerticalAlignment="Center"
                                                    Width="16" />
                                            </Button>
                                        </StackPanel>

                                        <Button
                                            Click="事件_刷新按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="刷新"
                                            VerticalAlignment="Top"
                                            Width="24">
                                            <Image
                                                Height="16"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 刷新}"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                        </Button>
                                        <Button
                                            Click="事件_撤消按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="滚动到底"
                                            VerticalAlignment="Top"
                                            Width="24">
                                            <Image
                                                Height="14"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 撤消}"
                                                VerticalAlignment="Center"
                                                Width="14" />
                                        </Button>
                                        <Button
                                            Click="事件_到首行按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,5,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="滚动到顶"
                                            VerticalAlignment="Top"
                                            Width="24">
                                            <Image
                                                Height="16"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 向上}"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                        </Button>
                                        <Button
