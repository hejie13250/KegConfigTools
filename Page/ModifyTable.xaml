<class:BasePage
    FontFamily="小科狗字体"
    FontSize="14"
    TextOptions.TextRenderingMode="ClearType"
    Title="ModifyTable"
    UseLayoutRounding="True"
    mc:Ignorable="d"
    x:Class="小科狗配置.Page.ModifyTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:class="clr-namespace:小科狗配置.Class"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid x:Name="grid1">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Margin="10,0,0,0"
            Orientation="Horizontal"
            VerticalAlignment="Top"
            x:Name="stackPanel_1">
            <CheckBox
                Click="事件_切换库按钮_Click"
                Height="24"
                HorizontalAlignment="Center"
                IsChecked="False"
                Margin="10,0,0,0"
                Padding="5,0,0,0"
                Style="{DynamicResource DbCheckBox}"
                VerticalAlignment="Center"
                x:Name="dbCheckBox" />
            <ComboBox
                Height="24"
                Margin="5,0,0,0"
                MouseEnter="ComboBox_MouseEnter"
                SelectionChanged="事件_表组合框_SelectionChanged"
                Style="{DynamicResource RoundComboBox}"
                Width="145"
                x:Name="comboBox" />
            <Button
                Click="事件_打开按钮_Click"
                Height="24"
                IsEnabled="False"
                Margin="5,0,0,0"
                Padding="1,-5,1,1"
                Style="{DynamicResource RoundButton2}"
                ToolTip="打开其它库"
                Width="24"
                x:Name="open_Button">
                <Image
                    Height="14"
                    Margin="2,2,2,2"
                    Source="{StaticResource 三点}" />
            </Button>
            <Button
                Click="复制表按钮_Click"
                Height="24"
                HorizontalAlignment="Left"
                Margin="5,0,0,0"
                Style="{DynamicResource RoundButton2}"
                ToolTip="复制表"
                Width="24"
                x:Name="newName_Button">
                <Image
                    Height="18"
                    HorizontalAlignment="Center"
                    OpacityMask="Black"
                    Source="{StaticResource 复制}"
                    VerticalAlignment="Center"
                    Width="18" />
            </Button>
            <Button
                Click="删除表按钮_Click"
                Height="24"
                HorizontalAlignment="Left"
                Margin="5,0,0,0"
                Style="{DynamicResource RoundButton2}"
                ToolTip="删除表"
                x:Name="reName_Button">
                <Image
                    Height="14"
                    HorizontalAlignment="Center"
                    OpacityMask="Black"
                    Source="{StaticResource 删除表}"
                    VerticalAlignment="Center"
                    Width="14" />
            </Button>
            <Button
                Click="事件_导入表按钮_Click"
                Height="24"
                HorizontalAlignment="Left"
                Margin="5,0,0,0"
                Style="{DynamicResource RoundButton2}"
                ToolTip="导入 CSV 文件 为新表"
                VerticalAlignment="Center"
                Width="24">
                <Image
                    Height="14"
                    HorizontalAlignment="Center"
                    Source="{StaticResource 导入}"
                    VerticalAlignment="Center"
                    Width="14" />
            </Button>
            <Button
                Click="事件_导出表按钮_Click"
                Height="24"
                HorizontalAlignment="Left"
                Margin="5,0,0,0"
                Style="{DynamicResource RoundButton2}"
                ToolTip="导出当前表为 CSV 文件"
                VerticalAlignment="Center"
                Width="24">
                <Image
                    Height="14"
                    HorizontalAlignment="Center"
                    Source="{StaticResource 导出}"
                    VerticalAlignment="Center"
                    Width="14" />
            </Button>






            <Label Content="字体：" Margin="10,0,0,0" />
            <ComboBox
                Height="24"
                IsEnabled="False"
                Margin="5,0,0,0"
                MouseEnter="ComboBox_MouseEnter"
                SelectionChanged="FontComboBox_SelectionChanged"
                Style="{DynamicResource RoundComboBox}"
                Width="145"
                x:Name="fontComboBox" />

        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalScrollBarVisibility="Hidden"
            x:Name="scrollViewer1">
            <StackPanel Orientation="Vertical" x:Name="groupBoxStackPanel">

                <GroupBox
                    Header="候选框样式"
                    IsEnabled="False"
                    Margin="10,0,10,10"
                    MouseEnter="GroupBox_MouseEnter"
                    Style="{StaticResource HiddenBorderGroupBoxStyle}"
                    x:Name="groupBox1">
                    <Border Style="{StaticResource CustomBorderStyle}">
                        <Grid Height="500" Margin="10,10,10,10">
                            <StackPanel Orientation="Vertical">
                                <StackPanel
                                    Height="24"
                                    IsEnabled="False"
                                    Orientation="Horizontal"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                    x:Name="stackPanel">

                                    <StackPanel Orientation="Horizontal" x:Name="stackPanel_2">
                                        <CheckBox
                                            Click="事件_切换按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Center"
                                            Padding="5,0,0,0"
                                            Style="{DynamicResource KeyOrValueCheckBox}"
                                            VerticalAlignment="Center"
                                            x:Name="keyOrValueCheckBox" />
                                        <TextBox
                                            Height="24"
                                            Margin="5,0,0,0"
                                            Padding="0,0,0,0"
                                            Style="{DynamicResource RoundTextBox}"
                                            Tag="搜索编码"
                                            TextChanged="事件_搜索框_TextChanged"
                                            TextWrapping="Wrap"
                                            Width="116"
                                            x:Name="textBox2" />
                                        <TextBox
                                            Height="24"
                                            IsReadOnly="True"
                                            Margin="5,0,0,0"
                                            Padding="0,0,0,0"
                                            Style="{DynamicResource RoundTextBox}"
                                            Text="词条数："
                                            TextWrapping="Wrap"
                                            Width="140"
                                            x:Name="textBox1" />
                                    </StackPanel>



                                    <StackPanel Orientation="Horizontal" x:Name="stackPanel_3">
                                        <Button
                                            Click="事件_第一页按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="第一页"
                                            VerticalAlignment="Top"
                                            Width="24"
                                            x:Name="button">
                                            <Image
                                                Height="16"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 第一页}"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                        </Button>
                                        <Button
                                            Click="事件_上一页按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="上一页"
                                            VerticalAlignment="Top"
                                            Width="24"
                                            x:Name="button1">
                                            <Image
                                                Height="16"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 上一页}"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                        </Button>

                                        <TextBox
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            IsReadOnly="True"
                                            Margin="5,0,0,0"
                                            MouseWheel="事件_页码框_MouseWheel"
                                            Padding="5,0,5,0"
                                            Style="{DynamicResource RoundTextBox}"
                                            Text="5"
                                            TextWrapping="Wrap"
                                            ToolTip="鼠标滚轮调节，按 Ctrl 步长为 5，按 Shift 步长为 10"
                                            VerticalAlignment="Center"
                                            Width="70"
                                            x:Name="textBox" />
                                        <Button
                                            Click="事件_下一页按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="下一页"
                                            VerticalAlignment="Top"
                                            Width="24"
                                            x:Name="button2">
                                            <Image
                                                Height="16"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 下一页}"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                        </Button>
                                        <Button
                                            Click="事件_最后页按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="最后一页"
                                            VerticalAlignment="Top"
                                            Width="24"
                                            x:Name="button3">
                                            <Image
                                                Height="16"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 最后一页}"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                        </Button>
                                    </StackPanel>

                                    <Button
                                        Click="事件_刷新按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="刷新"
                                        VerticalAlignment="Top"
                                        Width="24"
                                        x:Name="button4">
                                        <Image
                                            Height="16"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 刷新}"
                                            VerticalAlignment="Center"
                                            Width="16" />
                                    </Button>
                                    <Button
                                        Click="事件_撤消按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="滚动到底"
                                        VerticalAlignment="Top"
                                        Width="24"
                                        x:Name="button7">
                                        <Image
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 撤消}"
                                            VerticalAlignment="Center"
                                            Width="14" />
                                    </Button>
                                    <Button
                                        Click="事件_到首行按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,5,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="滚动到顶"
                                        VerticalAlignment="Top"
                                        Width="24"
                                        x:Name="button5">
                                        <Image
                                            Height="16"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 向上}"
                                            VerticalAlignment="Center"
                                            Width="16" />
                                    </Button>
                                    <Button
                                        Click="事件_到尾行按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="滚动到底"
                                        VerticalAlignment="Top"
                                        Width="24"
                                        x:Name="button6">
                                        <Image
                                            Height="16"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 向下}"
                                            VerticalAlignment="Center"
                                            Width="16" />
                                    </Button>
                                    <Button
                                        Click="事件_提交按钮_Click"
                                        Content="提交修改"
                                        Height="24"
                                        IsEnabled="False"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="将选中项标计为删除"
                                        x:Name="submit_Button" />
                                </StackPanel>

                                <ListView
                                    Background="Transparent"
                                    BorderBrush="Black"
                                    BorderThickness="1,1,1,1"
                                    Height="300"
                                    ItemsSource="{Binding UpdateSourceTrigger=PropertyChanged}"
                                    Margin="0,5,0,5"
                                    MouseDoubleClick="事件_列表_MouseDoubleClick"
                                    d:ItemsSource="{d:SampleData ItemCount=3}"
                                    x:Name="listView">
                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="ListViewItem">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDel}" Value="True">
                                                    <Setter Property="Background" Value="#FFB6C1" />
                                                    <!--  标记删除时背景改为红色  -->
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsAdd}" Value="True">
                                                    <Setter Property="Background" Value="#90EE90" />
                                                    <!--  标记新增时背景改为绿色  -->
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsMod}" Value="True">
                                                    <Setter Property="Background" Value="#FFFF00" />
                                                    <!--  标记修改时背景改为黄色  -->
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>

                                    </ListView.ItemContainerStyle>
                                    <ListView.View>
                                        <GridView AllowsColumnReorder="True">
                                            <GridViewColumn
                                                DisplayMemberBinding="{Binding RowNumber}"
                                                Header="#"
                                                Width="70" />
                                            <GridViewColumn
                                                DisplayMemberBinding="{Binding Key}"
                                                Header="编码"
                                                Width="45" />
                                            <GridViewColumn
                                                DisplayMemberBinding="{Binding Value}"
                                                Header="词条"
                                                Width="100" />
                                            <GridViewColumn
                                                DisplayMemberBinding="{Binding Weight}"
                                                Header="权重"
                                                Width="100" />
                                            <GridViewColumn
                                                DisplayMemberBinding="{Binding Fc}"
                                                Header="反查"
                                                Width="260" />
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                                <StackPanel
                                    Height="24"
                                    Margin="0,0,0,5"
                                    Orientation="Horizontal"
                                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                    <CheckBox
                                        Click="事件_切换按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        IsChecked="False"
                                        Margin="0,0,5,0"
                                        Style="{DynamicResource AddOrModCheckBoxStyle}"
                                        VerticalAlignment="Center"
                                        x:Name="addOrModCheckBox" />

                                    <Button
                                        Click="事件_添加或修改按钮_Click"
                                        Content="修改"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Style="{DynamicResource RoundButton2}"
                                        x:Name="add_Mod_Button" />
                                    <TextBox
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        MinWidth="50"
                                        Padding="5,0,5,0"
                                        Style="{DynamicResource RoundTextBox}"
                                        Tag="编码"
                                        TextWrapping="Wrap"
                                        VerticalAlignment="Center"
                                        Width="60"
                                        x:Name="keyTextBox" />
                                    <TextBox
                                        Height="24"
                                        Margin="5,0,5,0"
                                        MinWidth="50"
                                        Padding="5,0,5,0"
                                        Style="{DynamicResource RoundTextBox}"
                                        Tag="词条"
                                        TextWrapping="Wrap"
                                        Width="110"
                                        x:Name="valueTextBox" />
                                    <TextBox
                                        DataObject.Pasting="事件_权重框_Pasting"
                                        Height="24"
                                        MinWidth="50"
                                        Padding="5,0,5,0"
                                        PreviewTextInput="事件_权重框_PreviewTextInput"
                                        Style="{DynamicResource RoundTextBox}"
                                        Tag="权重"
                                        TextChanged="事件_权重框_TextChanged"
                                        TextWrapping="Wrap"
                                        Width="100"
                                        x:Name="weightTextBox" />
                                    <TextBox
                                        Height="24"
                                        Margin="5,0,5,0"
                                        MinWidth="50"
                                        Padding="5,0,5,0"
                                        Style="{DynamicResource RoundTextBox}"
                                        Tag="反查"
                                        TextWrapping="Wrap"
                                        VerticalAlignment="Center"
                                        Width="240"
                                        x:Name="fcTextBox" />

                                    <Button
                                        Click="事件_标记删除按钮_Click"
                                        Content="标记删除"
                                        Height="24"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="将选中项标计为删除"
                                        x:Name="del_Button" />

                                </StackPanel>
                                <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                    <TextBox
                                        Height="24"
                                        Margin="0,0,5,0"
                                        MinWidth="50"
                                        Padding="5,0,5,0"
                                        Style="{DynamicResource RoundTextBox}"
                                        Tag="码表重命名"
                                        TextWrapping="Wrap"
                                        Width="174"
                                        x:Name="reNameTextBox" />



                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox
                                        Height="24"
                                        Margin="0,0,5,0"
                                        MinWidth="50"
                                        Padding="5,0,5,0"
                                        Style="{DynamicResource RoundTextBox}"
                                        Tag="复制表命名"
                                        TextWrapping="Wrap"
                                        Width="174"
                                        x:Name="newNameTextBox" />


                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </GroupBox>








            </StackPanel>
        </ScrollViewer>
    </Grid>
</class:BasePage>
