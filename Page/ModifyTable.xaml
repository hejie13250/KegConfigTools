                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="导入 CSV 文件 为新表"
                                        VerticalAlignment="Center"
                                        Width="24">
                                        <Image
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 导入}"
                                            VerticalAlignment="Center"
                                            Width="14" />
                                    </Button>
                                    <Button
                                        Click="事件_导出表按钮_Click"
                                        Height="24"
                                        HorizontalAlignment="Left"
                                        Margin="5,0,0,0"
                                        Style="{DynamicResource RoundButton2}"
                                        ToolTip="导出当前表为 CSV 文件"
                                        VerticalAlignment="Center"
                                        Width="24">
                                        <Image
                                            Height="14"
                                            HorizontalAlignment="Center"
                                            Source="{StaticResource 导出}"
                                            VerticalAlignment="Center"
                                            Width="14" />
                                    </Button>






                                    <Label Content="字体：" Margin="10,0,0,0" />
                                    <ComboBox
                                        Height="24"
                                        IsEnabled="False"
                                        Margin="5,0,0,0"
                                        MouseEnter="组合框_MouseEnter"
                                        SelectionChanged="事件_字体组合框_SelectionChanged"
                                        Style="{DynamicResource RoundComboBox}"
                                        Width="145"
                                        x:Name="fontComboBox2" />

                                </StackPanel>
                                <StackPanel
                                    IsEnabled="False"
                                    Orientation="Vertical"
                                    x:Name="stackPanel_22">
                                    <StackPanel
                                        Height="24"
                                        IsEnabled="False"
                                        Orientation="Horizontal"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled"
                                        x:Name="stackPanel_32">

                                        <StackPanel Orientation="Horizontal" x:Name="stackPanel_42">
                                            <CheckBox
                                                Click="事件_切换按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Center"
                                                Padding="5,0,0,0"
                                                Style="{DynamicResource KeyOrValueCheckBox}"
                                                VerticalAlignment="Center"
                                                x:Name="keyOrValueCheckBox2" />
                                            <TextBox
                                                Height="24"
                                                Margin="5,0,0,0"
                                                Padding="0,0,0,0"
                                                Style="{DynamicResource RoundTextBox}"
                                                Tag="搜索编码"
