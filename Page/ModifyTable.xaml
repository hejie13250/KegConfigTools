                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="滚动到底"
                                            VerticalAlignment="Top"
                                            Width="24">
                                            <Image
                                                Height="16"
                                                HorizontalAlignment="Center"
                                                Source="{StaticResource 向下}"
                                                VerticalAlignment="Center"
                                                Width="16" />
                                        </Button>
                                        <Button
                                            Click="事件_提交按钮_Click"
                                            Content="提交修改"
                                            Height="24"
                                            IsEnabled="False"
                                            Margin="5,0,0,0"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="将选中项标计为删除"
                                            x:Name="submit_Button" />
                                    </StackPanel>

                                    <ListView
                                        Background="Transparent"
                                        BorderBrush="Black"
                                        BorderThickness="1,1,1,1"
                                        Height="300"
                                        ItemsSource="{Binding UpdateSourceTrigger=PropertyChanged}"
                                        Margin="0,5,0,5"
                                        MouseDoubleClick="事件_列表_MouseDoubleClick"
                                        d:ItemsSource="{d:SampleData ItemCount=3}"
                                        x:Name="listView">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsDel}" Value="True">
                                                        <Setter Property="Background" Value="#FFB6C1" />
                                                        <!--  标记删除时背景改为红色  -->
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsAdd}" Value="True">
                                                        <Setter Property="Background" Value="#90EE90" />
                                                        <!--  标记新增时背景改为绿色  -->
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsMod}" Value="True">
                                                        <Setter Property="Background" Value="#FFFF00" />
                                                        <!--  标记修改时背景改为黄色  -->
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>

                                        </ListView.ItemContainerStyle>
                                        <ListView.View>
                                            <GridView AllowsColumnReorder="True">
                                                <GridViewColumn
                                                    DisplayMemberBinding="{Binding RowNumber}"
                                                    Header="#"
                                                    Width="70" />
                                                <GridViewColumn
                                                    DisplayMemberBinding="{Binding Key}"
                                                    Header="编码"
                                                    Width="45" />
                                                <GridViewColumn
                                                    DisplayMemberBinding="{Binding Value}"
                                                    Header="词条"
                                                    Width="100" />
                                                <GridViewColumn
                                                    DisplayMemberBinding="{Binding Weight}"
                                                    Header="权重"
                                                    Width="100" />
                                                <GridViewColumn
                                                    DisplayMemberBinding="{Binding Fc}"
                                                    Header="反查"
                                                    Width="260" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                    <StackPanel
                                        Height="24"
                                        Margin="0,0,0,5"
                                        Orientation="Horizontal"
                                        ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                        <CheckBox
                                            Click="事件_切换按钮_Click"
                                            Height="24"
                                            HorizontalAlignment="Center"
                                            IsChecked="False"
                                            Margin="0,0,5,0"
                                            Style="{DynamicResource AddOrModCheckBoxStyle}"
                                            VerticalAlignment="Center"
                                            x:Name="addOrModCheckBox" />

                                        <Button
                                            Click="事件_添加或修改按钮_Click"
                                            Content="修改"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Style="{DynamicResource RoundButton2}"
                                            x:Name="add_Mod_Button" />
                                        <TextBox
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="5,0,0,0"
                                            MinWidth="50"
                                            Padding="5,0,5,0"
                                            Style="{DynamicResource RoundTextBox}"
                                            Tag="编码"
                                            TextWrapping="Wrap"
                                            VerticalAlignment="Center"
                                            Width="60"
                                            x:Name="keyTextBox" />
                                        <TextBox
                                            Height="24"
                                            Margin="5,0,5,0"
                                            MinWidth="50"
                                            Padding="5,0,5,0"
                                            Style="{DynamicResource RoundTextBox}"
                                            Tag="词条"
                                            TextWrapping="Wrap"
                                            Width="110"
                                            x:Name="valueTextBox" />
                                        <TextBox
                                            DataObject.Pasting="事件_权重框_Pasting"
                                            Height="24"
                                            MinWidth="50"
                                            Padding="5,0,5,0"
                                            PreviewTextInput="事件_权重框_PreviewTextInput"
                                            Style="{DynamicResource RoundTextBox}"
                                            Tag="权重"
                                            TextChanged="事件_权重框_TextChanged"
                                            TextWrapping="Wrap"
                                            Width="100"
                                            x:Name="weightTextBox" />
                                        <TextBox
                                            Height="24"
                                            Margin="5,0,5,0"
                                            MinWidth="50"
                                            Padding="5,0,5,0"
                                            Style="{DynamicResource RoundTextBox}"
                                            Tag="反查"
                                            TextWrapping="Wrap"
                                            VerticalAlignment="Center"
                                            Width="240"
                                            x:Name="fcTextBox" />

                                        <Button
                                            Click="事件_标记删除按钮_Click"
                                            Content="标记删除"
                                            Height="24"
                                            Style="{DynamicResource RoundButton2}"
                                            ToolTip="将选中项标计为删除"
                                            x:Name="del_Button" />

                                    </StackPanel>
                                </StackPanel>


                            </StackPanel>
                        </Grid>
                    </Border>
                </GroupBox>


