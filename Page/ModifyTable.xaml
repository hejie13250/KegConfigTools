                                                Margin="5,0,0,0"
                                                Padding="0,0,0,0"
                                                Style="{DynamicResource RoundTextBox}"
                                                Text="词条数："
                                                TextWrapping="Wrap"
                                                Width="140"
                                                x:Name="countTextBox2" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" x:Name="stackPanel_52">
                                            <Button
                                                Click="事件_第一页按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                Margin="5,0,0,0"
                                                Style="{DynamicResource RoundButton2}"
                                                ToolTip="第一页"
                                                VerticalAlignment="Top"
                                                Width="24">
                                                <Image
                                                    Height="16"
                                                    HorizontalAlignment="Center"
                                                    Source="{StaticResource 第一页}"
                                                    VerticalAlignment="Center"
                                                    Width="16" />
                                            </Button>
                                            <Button
                                                Click="事件_上一页按钮_Click"
                                                Height="24"
                                                HorizontalAlignment="Left"
                                                Margin="5,0,0,0"
                                                Style="{DynamicResource RoundButton2}"
                                                ToolTip="上一页"
                                                VerticalAlignment="Top"
                                                Width="24">
                                                <Image
                                                    Height="16"
                                                    HorizontalAlignment="Center"
                                                    Source="{StaticResource 上一页}"
