                                            <GridViewColumn Header="命令" Width="612">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <!--  ReSharper disable once Xaml.BindingWithContextNotResolved  -->
                                                        <TextBox
