                                            <GridViewColumn Header="热键" Width="195">
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <!--  ReSharper disable once Xaml.BindingWithContextNotResolved  -->
                                                        <local:HotKeyControl
